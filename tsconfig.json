{
  "compilerOptions": {
    "target": "ES2020",                        // Compiles to modern JavaScript
    "module": "commonjs",                      // CommonJS is used by Node.js
    "strict": true,                            // Enables strict type-checking options
    "esModuleInterop": true,                   // Enables compatibility with ES modules
    "noImplicitAny": true,                     // Disallows implicit 'any' types
    "moduleResolution": "node",                // Node module resolution
    "sourceMap": true,                         // Generate source maps for debugging
    "outDir": "dist",                          // Output directory for compiled files
    "baseUrl": ".",                            // Base directory for module resolution
    "forceConsistentCasingInFileNames": true,  // Enforce consistent casing in imports
    "strictPropertyInitialization": false,     // Disable strict initialization checks (optional)
    "experimentalDecorators": true,            // Enables support for decorators
    "emitDecoratorMetadata": true,             // Emits metadata for decorators
    "paths": {                                 // Path aliases (if needed)
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*.ts", "src/types"],        // Includes all TypeScript files in src
  "exclude": ["node_modules"]                  // Excludes node_modules from compilation
}
